@model kjanshair.Models.ContactViewModel.ContactViewModel

@{
    ViewBag.Title = "Contact";
}


<header class="intro-header red-cover">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1 class="font-light option animated flipInY">Contact Me</h1>
                    <hr class="small">
                    <span class="subheading option animated zoomIn">Have questions? I have answers (maybe).</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <h3 class="font-light">Want to get in touch with me? Fill out the form below to send me a message and I will try to get back to you within 24 hours!</h3>
            <br />
            <form name="sentMessage" asp-controller="Home" asp-action="Contact" id="contactForm" novalidate method="post" role="form">
                <div class="row control-group">
                    <div class="font-light form-group col-xs-12 floating-label-form-group controls">
                        <label class="font-light-text">Your Name</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block labels text-danger"></p>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row control-group">
                    <div class="font-light form-group col-xs-12 floating-label-form-group controls">
                        <label class="font-light-text">Your Email</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block labels text-danger"></p>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row control-group">
                    <div class="font-light form-group col-xs-12 floating-label-form-group controls">
                        <label class="font-light-text">Subject</label>
                        <input type="text" asp-for="Subject" class="form-control" placeholder="Subject" id="subject" required="" data-validation-required-message="Please enter a subject." aria-invalid="false">
                        <p class="help-block labels text-danger"></p>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>

                <div class="row control-group">
                    <div class="font-light form-group col-xs-12 floating-label-form-group controls">
                        <label class="font-light-text">Message</label>
                        <textarea rows="5" class="form-control" asp-for="Message" placeholder="Message" id="message" required="" data-validation-required-message="Please enter a message." aria-invalid="false"></textarea>
                        <p class="help-block labels text-danger"></p>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>

                <br />

                <environment names="Staging,Production">
                    <div class="row control-group">
                        <div class="font-light form-group col-xs-12 floating-label-form-group controls">
                            <div class="g-recaptcha" data-sitekey="6LdKRxQTAAAAAHd9kNw8qp4OyxfWxvLnAhxVr8mu"></div>
                            <br />
                            <p id="captchaCheck" class="help-block text-danger"></p>
                        </div>
                    </div>
                </environment>

                <br />

                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-default">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <environment names="Staging,Production">
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    </environment>
}
